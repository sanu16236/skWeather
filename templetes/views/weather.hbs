<!-- navbar -->
{{>navbar}}
<!-- main header -->
<div class="container-fluid main_header">
    <div class="row m-0">
        <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="temp-form">
                    <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                    <input type="submit" id="submit-btn" value="Search">
                </form>
            </div>
            <div class="tempInfo">
                <div class="top_layer">
                    <p id="day">Tuesday</p>
                    <p id="today_date">12 oct</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Get Output Here</p>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real">0</span><sup>0</sup>c</p>
                        <p id="temp_status"><i class="fa fa-cloud"></i></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- footer -->
{{>footer}}